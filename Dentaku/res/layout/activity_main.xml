<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/display"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#EEEEEE"
            android:textColor="#505050"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/sign"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="+/-" />

                <Button
                    android:id="@+id/seven"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="7" />

                <Button
                    android:id="@+id/eight"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="8" />

                <Button
                    android:id="@+id/nine"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="9" />

                <Button
                    android:id="@+id/divide"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="รท" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/clear"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="C" />

                <Button
                    android:id="@+id/four"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="4" />

                <Button
                    android:id="@+id/five"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="5" />

                <Button
                    android:id="@+id/six"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="6" />

                <Button
                    android:id="@+id/multiply"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="ร" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/allClear"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="AC" />

                <Button
                    android:id="@+id/one"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="1" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="2" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="3" />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="-" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/zero"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="0" />

                <Button
                    android:id="@+id/doublezero"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="00" />

                <Button
                    android:id="@+id/comma"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="." />

                <Button
                    android:id="@+id/equal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="=" />

                <Button
                    android:id="@+id/plus"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="60dip"
                    android:onClick="onClickButton"
                    android:text="+" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>